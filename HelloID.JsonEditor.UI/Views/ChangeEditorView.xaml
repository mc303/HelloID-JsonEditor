<UserControl x:Class="HelloID.JsonEditor.UI.Views.ChangeEditorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:HelloID.JsonEditor.UI.Views"
             xmlns:behaviors="clr-namespace:HelloID.JsonEditor.UI.Behaviors"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="600">

    <UserControl.Resources>
        <!-- Apply popup editor behavior and Consolas font to all TextBoxes -->
        <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
            <Setter Property="behaviors:TextBoxEditorBehavior.EnablePopupEditor" Value="True"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="TextWrapping" Value="NoWrap"/>
        </Style>
    </UserControl.Resources>

    <DockPanel Margin="16">
        <!-- ID and Display Name -->
        <StackPanel DockPanel.Dock="Top" Margin="0,0,0,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="ID:" VerticalAlignment="Center" Margin="0,0,0,8"/>
                <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Id, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,8"/>

                <TextBlock Grid.Row="1" Grid.Column="0" Text="Display Name:" VerticalAlignment="Center" Margin="0,0,0,8"/>
                <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding DisplayName, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,8"/>
            </Grid>
        </StackPanel>

        <Separator DockPanel.Dock="Top" Margin="0,0,0,16"/>

        <!-- Grant/Revoke Tabs -->
        <TabControl>
            <!-- Grant Tab -->
            <TabItem Header="Grant">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="16">
                        <!-- Grant Enable Toggle -->
                        <CheckBox Content="Enable Grant Section"
                                  IsChecked="{Binding IsGrantEnabled}"
                                  FontWeight="Bold"
                                  Margin="0,0,0,16"/>

                        <Grid IsEnabled="{Binding IsGrantEnabled}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="Requester:" VerticalAlignment="Center" Margin="0,0,0,8"/>
                        <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding GrantRequester, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,8"/>

                        <TextBlock Grid.Row="1" Text="Request:" VerticalAlignment="Center" Margin="0,0,0,8"/>
                        <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding GrantRequest, UpdateSourceTrigger=PropertyChanged}"
                                 AcceptsReturn="True" MinHeight="60" Margin="0,0,0,8"/>

                        <TextBlock Grid.Row="2" Text="Action:" VerticalAlignment="Center" Margin="0,0,0,8"/>
                        <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding GrantAction, UpdateSourceTrigger=PropertyChanged}"
                                 AcceptsReturn="True" MinHeight="60" Margin="0,0,0,8"/>

                        <TextBlock Grid.Row="3" Text="Brief Description:" VerticalAlignment="Center" Margin="0,0,0,8"/>
                        <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding GrantBriefDescription, UpdateSourceTrigger=PropertyChanged}"
                                 AcceptsReturn="True" MinHeight="60" Margin="0,0,0,8"/>

                        <TextBlock Grid.Row="4" Text="Template:" VerticalAlignment="Center" Margin="0,0,0,8"/>
                        <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding GrantTemplate, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,8"/>

                        <TextBlock Grid.Row="5" Text="Category:" VerticalAlignment="Center" Margin="0,0,0,8"/>
                        <TextBox Grid.Row="5" Grid.Column="1" Text="{Binding GrantCategory, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,8"/>

                        <TextBlock Grid.Row="6" Text="SubCategory:" VerticalAlignment="Center" Margin="0,0,0,8"/>
                        <TextBox Grid.Row="6" Grid.Column="1" Text="{Binding GrantSubCategory, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,8"/>

                        <TextBlock Grid.Row="7" Text="Change Type:" VerticalAlignment="Center" Margin="0,0,0,8"/>
                        <TextBox Grid.Row="7" Grid.Column="1" Text="{Binding GrantChangeType, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,8"/>

                        <TextBlock Grid.Row="8" Text="Impact:" VerticalAlignment="Center" Margin="0,0,0,8"/>
                        <TextBox Grid.Row="8" Grid.Column="1" Text="{Binding GrantImpact, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,8"/>

                        <TextBlock Grid.Row="9" Text="Benefit:" VerticalAlignment="Center" Margin="0,0,0,8"/>
                        <TextBox Grid.Row="9" Grid.Column="1" Text="{Binding GrantBenefit, UpdateSourceTrigger=PropertyChanged}"
                                 AcceptsReturn="True" MinHeight="60" Margin="0,0,0,8"/>

                        <TextBlock Grid.Row="10" Text="Priority:" VerticalAlignment="Center" Margin="0,0,0,8"/>
                        <TextBox Grid.Row="10" Grid.Column="1" Text="{Binding GrantPriority, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,8"/>

                        <TextBlock Grid.Row="11" Grid.Column="0" Text="Enable Get Assets:" VerticalAlignment="Center" Margin="0,0,0,8"/>
                        <CheckBox Grid.Row="11" Grid.Column="1" IsChecked="{Binding GrantEnableGetAssets}" VerticalAlignment="Center" Margin="0,0,0,8"/>

                        <TextBlock Grid.Row="12" Grid.Column="0" Text="Skip No Assets Found:" VerticalAlignment="Center" Margin="0,0,0,8"/>
                        <CheckBox Grid.Row="12" Grid.Column="1" IsChecked="{Binding GrantSkipNoAssetsFound}" VerticalAlignment="Center" Margin="0,0,0,8"/>

                        <TextBlock Grid.Row="13" Text="Assets Filter:" VerticalAlignment="Center" Margin="0,0,0,8"/>
                        <TextBox Grid.Row="13" Grid.Column="1" Text="{Binding GrantAssetsFilter, UpdateSourceTrigger=PropertyChanged}"
                                 AcceptsReturn="True" MinHeight="60" Margin="0,0,0,8"/>
                    </Grid>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Revoke Tab -->
            <TabItem Header="Revoke">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="16">
                        <!-- Revoke Enable Toggle -->
                        <CheckBox Content="Enable Revoke Section"
                                  IsChecked="{Binding IsRevokeEnabled}"
                                  FontWeight="Bold"
                                  Margin="0,0,0,16"/>

                        <Grid IsEnabled="{Binding IsRevokeEnabled}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="Requester:" VerticalAlignment="Center" Margin="0,0,0,8"/>
                        <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding RevokeRequester, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,8"/>

                        <TextBlock Grid.Row="1" Text="Request:" VerticalAlignment="Center" Margin="0,0,0,8"/>
                        <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding RevokeRequest, UpdateSourceTrigger=PropertyChanged}"
                                 AcceptsReturn="True" MinHeight="60" Margin="0,0,0,8"/>

                        <TextBlock Grid.Row="2" Text="Action:" VerticalAlignment="Center" Margin="0,0,0,8"/>
                        <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding RevokeAction, UpdateSourceTrigger=PropertyChanged}"
                                 AcceptsReturn="True" MinHeight="60" Margin="0,0,0,8"/>

                        <TextBlock Grid.Row="3" Text="Brief Description:" VerticalAlignment="Center" Margin="0,0,0,8"/>
                        <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding RevokeBriefDescription, UpdateSourceTrigger=PropertyChanged}"
                                 AcceptsReturn="True" MinHeight="60" Margin="0,0,0,8"/>

                        <TextBlock Grid.Row="4" Text="Template:" VerticalAlignment="Center" Margin="0,0,0,8"/>
                        <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding RevokeTemplate, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,8"/>

                        <TextBlock Grid.Row="5" Text="Category:" VerticalAlignment="Center" Margin="0,0,0,8"/>
                        <TextBox Grid.Row="5" Grid.Column="1" Text="{Binding RevokeCategory, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,8"/>

                        <TextBlock Grid.Row="6" Text="SubCategory:" VerticalAlignment="Center" Margin="0,0,0,8"/>
                        <TextBox Grid.Row="6" Grid.Column="1" Text="{Binding RevokeSubCategory, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,8"/>

                        <TextBlock Grid.Row="7" Text="Change Type:" VerticalAlignment="Center" Margin="0,0,0,8"/>
                        <TextBox Grid.Row="7" Grid.Column="1" Text="{Binding RevokeChangeType, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,8"/>

                        <TextBlock Grid.Row="8" Text="Impact:" VerticalAlignment="Center" Margin="0,0,0,8"/>
                        <TextBox Grid.Row="8" Grid.Column="1" Text="{Binding RevokeImpact, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,8"/>

                        <TextBlock Grid.Row="9" Text="Benefit:" VerticalAlignment="Center" Margin="0,0,0,8"/>
                        <TextBox Grid.Row="9" Grid.Column="1" Text="{Binding RevokeBenefit, UpdateSourceTrigger=PropertyChanged}"
                                 AcceptsReturn="True" MinHeight="60" Margin="0,0,0,8"/>

                        <TextBlock Grid.Row="10" Text="Priority:" VerticalAlignment="Center" Margin="0,0,0,8"/>
                        <TextBox Grid.Row="10" Grid.Column="1" Text="{Binding RevokePriority, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,8"/>

                        <TextBlock Grid.Row="11" Grid.Column="0" Text="Enable Get Assets:" VerticalAlignment="Center" Margin="0,0,0,8"/>
                        <CheckBox Grid.Row="11" Grid.Column="1" IsChecked="{Binding RevokeEnableGetAssets}" VerticalAlignment="Center" Margin="0,0,0,8"/>

                        <TextBlock Grid.Row="12" Grid.Column="0" Text="Skip No Assets Found:" VerticalAlignment="Center" Margin="0,0,0,8"/>
                        <CheckBox Grid.Row="12" Grid.Column="1" IsChecked="{Binding RevokeSkipNoAssetsFound}" VerticalAlignment="Center" Margin="0,0,0,8"/>

                        <TextBlock Grid.Row="13" Text="Assets Filter:" VerticalAlignment="Center" Margin="0,0,0,8"/>
                        <TextBox Grid.Row="13" Grid.Column="1" Text="{Binding RevokeAssetsFilter, UpdateSourceTrigger=PropertyChanged}"
                                 AcceptsReturn="True" MinHeight="60" Margin="0,0,0,8"/>
                    </Grid>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>
    </DockPanel>
</UserControl>
